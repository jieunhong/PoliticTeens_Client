<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/actionbar_back"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/actionbar_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/actionbar_menu" />

        <ImageView
            android:id="@+id/actionbar_title"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/actionbar_title"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/actionbar_search"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_below="@id/actionbar_title"
            android:layout_centerInParent="true"
            android:background="@drawable/actionbar_search"
            android:textAlignment="center" />

    </RelativeLayout>
</android.support.v7.widget.Toolbar>