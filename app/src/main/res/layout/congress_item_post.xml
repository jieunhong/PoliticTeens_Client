<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/item"
        android:background="@color/colorTextPrimary">

        <ImageView
            android:id="@+id/jungdang_color"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />
        <TextView
            android:id="@+id/jundang_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:gravity="center_vertical"
            android:text="이름장소"
            android:textColor="@color/colorText"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginStart="13dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/jungdang_color"
            android:layout_toEndOf="@+id/jungdang_color" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="제목이 들어갈 장소입니다"
            android:textColor="@color/colorText"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/star"
            android:layout_toStartOf="@+id/star"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp" />


        <ImageView
            android:id="@+id/star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/actionba_menu" />

        <TextView
            android:id="@+id/post_num_stars"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:text="20"
            android:textColor="@color/colorText"
            android:textSize="10dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>