<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_jungdang_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"

    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="115dp"
        >
       <LinearLayout
            android:id="@+id/text_myjungdang"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="내 정당"
                android:textSize="15dp"
                android:textColor="@color/colorTextPrimary"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:background="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/search_jungdang"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="정당 탐색"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextPrimary"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                />

               </LinearLayout>
        <LinearLayout
            android:layout_below="@id/text_myjungdang"
            android:id="@+id/image_myjungdang"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/colorSelect"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_myjungdang"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="1"
                android:id="@+id/relativeLayout2">
                <ImageView
                    android:id="@+id/myjungdang_color"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="17dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/mydang_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/myjungdang_color"
                    android:layout_alignLeft="@+id/myjungdang_color"
                    android:layout_alignRight="@+id/myjungdang_color"
                    android:layout_alignStart="@+id/myjungdang_color"
                    android:layout_below="@+id/myjungdang_color"
                    android:text="스마틴당"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/my_jungdang_bar"
                    android:layout_width="200dp"
                    android:layout_height="3dp"
                    android:background="@color/colorText"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/myjungdang_color"
                    android:layout_toEndOf="@+id/myjungdang_color"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/myjungdang_color"
                    android:layout_alignLeft="@+id/my_jungdang_bar"
                    android:layout_alignStart="@+id/my_jungdang_bar"
                    android:layout_alignRight="@+id/my_jungdang_bar"
                    android:layout_alignEnd="@+id/my_jungdang_bar">

                    <TextView
                        android:id="@+id/mydang_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/people"
                        android:layout_alignBottom="@+id/people"
                        android:layout_centerHorizontal="true"
                        android:text="3,800"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/myjungdang_color"
                        android:layout_marginLeft="13dp"
                        android:layout_marginStart="13dp"
                        android:layout_toRightOf="@+id/mydang_people"
                        android:text="PEOPLE"
                        android:textColor="@color/colorText" />


                </LinearLayout>

                <TextView
                    android:id="@+id/mydang_ideology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서민을 위하는 나라"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:layout_alignTop="@+id/myjungdang_color"
                    android:layout_alignRight="@+id/my_jungdang_bar"
                    android:layout_alignEnd="@+id/my_jungdang_bar"
                    android:layout_alignLeft="@+id/my_jungdang_bar"
                    android:layout_alignStart="@+id/my_jungdang_bar" />
            </RelativeLayout>


        </FrameLayout>
